<UserControl x:Class="EatInEurope.Views.EditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EatInEurope.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF9DDEE2">
        <!-- EDIT DETAILS -->
        <Label x:Name="title" FontSize="40" Content="changes" Margin="10,19,596,338.6"/>
        <Label x:Name="ChangeName" FontSize="20" Content="Change rest name:" Margin="0,115,598,287.6"/>
        <TextBlock x:Name="restName" Margin="207,115,337,287.6" Background="White" OpacityMask="#FFB05555"/>
        <Label x:Name="ChangeCity" FontSize="20" Content="Change rest city:" Margin="0,179,598,223.6"/>
        <TextBlock x:Name="citytName" Margin="207,179,337,223.6" Background="White" OpacityMask="#FFB05555"/>
        <Label x:Name="ChangeCity_Copy" FontSize="20" Content="Change rest url add's:" Margin="0,245,598,157.6"/>
        <TextBlock x:Name="citytName_Copy" Margin="207,245,337,157.6" Background="White" OpacityMask="#FFB05555"/>

        <Button x:Name="update" Content="Edit!" Click="update_Click" FontSize="20" Margin="601,374,57,28.6"/>

    </Grid>
</UserControl>
